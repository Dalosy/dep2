 <%= render "devise/shared/layouts" %>        
                <h3 class="form-title text-center">Начните работать</h3>    
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                <div class="form-group">
                <div class="field">                  
                  <%= f.email_field :email, autofocus: true, class:"form-control input-lg", placeholder: "Логин" %>
                </div>
                </div>

                <div class="form-group">
                <div class="field">                 
                  <%= f.password_field :password, autocomplete: "off", class:"form-control input-lg", placeholder: "Пароль"  %>
                </div>
                </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>

                <div class="actions">
                  <%= f.submit "Стартуем!", class:"btn1" %>
                </div>
              <% end %>
 <%= render "devise/shared/layoutsfooter" %>   