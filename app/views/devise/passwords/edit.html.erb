 <%= render "devise/shared/layouts" %>    

<h3 class="form-title text-center">Смените пароль</h3>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
  <div class="field">   
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", class:"form-control input-lg", placeholder: "Новый пароль" %>
  </div>
  </div>

  <div class="form-group">
  <div class="field">    
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control input-lg", placeholder: "Подтверждение пароля" %>
  </div>
  </div>

  <div class="form-group">
  <div class="actions">
    <%= f.submit "Сменить пароль", class:"btn1" %>
  </div>
  </div>
<% end %>

 <%= render "devise/shared/layoutsfooter" %>   
