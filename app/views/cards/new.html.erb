<div  class= "row" > 
<div class="col-md-4 col-md-offset-4">
  <%= form_for :card, url: cards_path do |f| %>
  <div class="form-group">
  <div class="field">      
    <%= f.text_field :client, class:"form-control input-lg", placeholder: "Клиент" %>
  </div>
  </div>
 
  <div class="form-group">
  <div class="field"> 
    <%= f.text_field :address, class:"form-control input-lg", placeholder: "Адрес" %>
  </div>
  </div>

<% if @card.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @card.errors.full_messages.each do |msg| %>
          <li class="bg-danger"><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

  <div class="actions">
    <%= f.submit "Создать клиента", class:"btn1" %>
  </div>
<% end %>
</div>
</div>



